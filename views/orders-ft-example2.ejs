<% include partials/header %>

<!--<body>-->
<div class="container-orders" style="margin-top: 50px">
        <div class="row">
            <div class="col-lg-12 orders-title">
                <h3>Existing orders</h3>
            </div>
        </div>

        <!--<div class="container table-responsive">-->
                <table class="table" data-toggle-column="last">
                    <thead>
                        <tr>
                            <th data-breakpoints="xs sm">Order ID</th>
                            <th>Order Date</th>
                            <th data-breakpoints="xs sm md">Rep Name</th>
                            <th data-breakpoints="xs sm">Customer</th>
                            <th data-breakpoints="xs sm md">Principal</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(function(orders) { %>
                            <div>
                                <tr>
                                    <td>
                                        <%= orders._id %>
                                    </td>
                                    <td style="text-align:center;">
                                        <%= orders.date %>
                                    </td>
                                    <td>
                                        <%= orders.representative %>
                                    </td>
                                    <td>
                                        <%= orders.customer %>
                                    </td>
                                    <td>
                                        <%= orders.principal %>
                                    </td>
                                    <td style="text-align:center;">
                                        <%= orders.amount %>
                                    </td>
                                    <!--<td style="text-align:center;"> 
                                        <a href="/orders/<%= orders._id %>">Details</a> | 
                                        <a href="/orders/<%= orders._id %>/edit">Edit</a>
                                    </td>-->
                                </tr>
                            </div>
                            <% }); %>
                    </tbody>
                </table>
        <!--</div>-->
    </div>
    
    
<!--</body>-->

<% include partials/footer %>