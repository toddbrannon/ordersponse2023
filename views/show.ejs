<% include partials/header %>

    <div class="container container-edit" style="margin-top: 150px">
        <div class="row">
            <div class="col-lg-12 orders-title">
                <h4>Order ID
                    <%= order._id %>
                </h4>
            </div>
        </div>
        <div class="col-sm-12 mobile-buttons" style="text-align: center; padding-bottom:10px;">
            <a href="/orders/<%= order._id %>/edit" class="btn btn-default btn-primary px-4"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                        
            <!-- Button HTML (to Trigger Modal) -->
    	    <a href="#myModal" class="btn btn-default btn-danger px-4" data-toggle="modal"><i class="fa fa-trash fa-2x" aria-hidden="true"></i></a>
    	    <a href="/orders" class="btn btn-default btn-info px-4"><i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i></a>
    	</div>
        <div class="row">
            <div class="col-md-10 mx-auto">
                <form>
                    <div class="form-group row">
                        <div class="col-sm-4" style="text-align: center;">
                            <label for="inputDate">Order Date: </label>
                            <div style="background:#EAEBEC; padding:8px;">
                            
                                <%= order.date %>
                            
                            </div>
                        </div>
                        <div class="col-sm-4" style="text-align: center;">
                            <label for="inputTerritory">Territory: </label>
                            <div style="background:#EAEBEC; padding:8px;">
                                
                                <%= order.territory %>
                                
                            </div>
                        </div>
                        <div class="col-sm-4" style="text-align: center;">
                            <label for="inputPrincipal">Principal: </label>
                            <div style="background:#EAEBEC; padding:8px;">
                                
                                <%= order.principal %>
                                
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4" style="text-align: center;">
                            <label for="inputCustomer">Customer: </label>
                            <div style="background:#EAEBEC; padding:8px;">
                                
                                <%= order.customer %>
                                
                            </div>
                        </div>
                        <div class="col-sm-4" style="text-align: center;">
                            <label for="inputCity">Sales Rep: </label>
                            <div style="background:#EAEBEC; padding:8px;">
                                
                                <%= order.representative %>
                                
                            </div>
                        </div>
                        <div class="col-sm-4" style="text-align: center;">
                            <label for="inputState">Total: </label>
                            <div style="background:#EAEBEC; padding:8px;">
                                
                                <%= order.amount %>
                                
                            </div>
                        </div>
                    </div>
                    <!--<div class="col-sm-12 new-buttons" style="text-align: center;">
                        <a href="/orders/<%= order._id %>/edit" class="btn btn-default btn-primary px-4">Edit</a>-->
                        
                         <!-- Button HTML (to Trigger Modal) -->
    	                <!--<a href="#myModal" class="btn btn-default btn-danger px-4" data-toggle="modal">Delete</a>
    	                <a href="/orders" class="btn btn-default btn-info px-4">Back</a>
    	            </div>-->
                </form>
               

                
            </div>
        </div>
        <div class="row row-back">
            <div class="col-lg-12 orders-title">
                <!--<a href="/">Back to Main </a> | <a href="/orders"> Back to Orders</a>-->
            </div>
        </div>
        
        
        
    </div>
    
                        <!-- Modal HTML -->
<div id="myModal" class="modal fade">
	<div class="modal-dialog modal-confirm">
		<div class="modal-content">
			<div class="modal-header">
				<div class="icon-box">
					<i class="material-icons">&#xE5CD;</i>
				</div>				
					
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-sub"><h4 class="modal-title">Are you sure?</h4></div>
			<div class="modal-body">
			    <p>You are about to permanently delete this record from the database. This process cannot be undone.</p>
				
			</div>
			<div class="modal-footer">
			    <div class="col-sm-12 mobile-buttons" style="text-align: center; padding-bottom:10px;">
				<form action="/orders/<%= order._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
                </form>
                </div>
			</div>
		</div>
	</div>
</div>   
  

    <% include partials/footer %>